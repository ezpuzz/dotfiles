[user]
	email = epetermann@neighborly.com
	name = Emory Petermann
[core]
	editor = nvim -u ~/.config/nvim/git.vim
	pager = diff-so-fancy | less --tabs=4 -R
	autocrlf = input
[push]
	default = simple
[alias]
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
[pull]
	rebase = true
[color "diff"]
	whitespace = red reverse
[color]
	diff = auto
	ui = auto
[rerere]
	enabled = true
[diff-so-fancy]
	markEmptyLines = false

[diff]
  tool = kitty
  guitool = kitty.gui
[difftool]
  prompt=false
  trustExitCode = true
[difftool "kitty"]
  cmd = kitty +kitten diff $LOCAL $REMOTE
[difftool "kitty.gui"]
  cmd = kitty kitty +kitten diff $LOCAL $REMOTE
